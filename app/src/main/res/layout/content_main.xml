<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kaist.onschedule.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="@string/show_schedule"
            android:layout_gravity="bottom"
            android:layout_column="0"
            android:allowUndo="false"
            android:drawableTop="@drawable/schedule_list_1"
            style="@style/AppTheme"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/btnReg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="@string/register_schedule"
            android:layout_gravity="bottom"
            android:layout_column="1"
            style="@style/AppTheme"
            android:drawableTop="@drawable/add_schedule_3"
            android:layout_weight="0.4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="@string/settings"
            android:layout_gravity="bottom"
            android:layout_column="0"
            android:drawableTop="@drawable/settings_1"
            style="@style/AppTheme"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="@string/exit"
            android:layout_gravity="bottom"
            android:layout_column="1"
            android:drawableTop="@drawable/exit_1"
            style="@style/AppTheme"
            android:layout_weight="0.4" />
    </TableRow>

</TableLayout>